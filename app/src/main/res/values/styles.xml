<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProductCategoryLabel">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="ProductCategoryLabelw600dp" parent="ProductCategoryLabel">
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="ProductCategoryLabelw900dp" parent="ProductCategoryLabel">
        <item name="android:textSize">42sp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

</resources>
