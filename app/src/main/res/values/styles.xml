<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProductTextStyle">
        <item name="android:fontFamily">@string/app_text_font_family</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="KKToolBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/ToolbarText</item>
    </style>

    <style name="ToolbarText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ProductTextStyleCart" parent="ProductTextStyle">
        <item name="android:textSize">@dimen/cart_item_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="ProductTextStylew600dp" parent="ProductTextStyle">
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="ProductTextStylew900dp" parent="ProductTextStyle">
        <item name="android:textSize">42sp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="ProductTextStyleCartw600dp" parent="ProductTextStyleCart">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">top</item>
    </style>


    <style name="ProductTextStyleCartw900dp" parent="ProductTextStyleCart">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="ProductTextStyleCartDark" parent="ProductTextStyleCart">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


</resources>
