<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.application.melanieh.kk.ui.ProductDetailActivity">

    <fragment
        android:id="@+id/productDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.application.melanieh.kk.ui.ProductDetailFragment"/>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_anchor="@id/productDetailFragment"
        app:layout_anchorGravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp">

        <fragment
            android:id="@+id/addToCartBtnFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.application.melanieh.kk.ui.AddToCartBtnFragment"/>

        <fragment
            android:id="@+id/stripeOnlyPayButtonFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.application.melanieh.kk.ui.PayWithStripeBtnFragment"/>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
