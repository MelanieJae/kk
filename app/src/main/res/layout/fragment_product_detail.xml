<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/product_iv"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/detail_screen_iv_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/name"
        android:layout_marginTop="@dimen/list_vert_margin"
        android:layout_marginBottom="@dimen/list_vert_margin"
        android:textSize="32sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cost"
        android:layout_marginTop="@dimen/list_vert_margin"
        android:layout_marginBottom="@dimen/list_vert_margin"
        android:textSize="32sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.widget.Spinner
        android:id="@+id/product_variety_spinner"
        android:layout_marginTop="@dimen/vert_margin"
        android:layout_marginBottom="@dimen/vert_margin"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.widget.Spinner>

    <Button
        android:id="@+id/add_to_cart_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/vert_margin"
        android:layout_marginBottom="@dimen/vert_margin"
        android:layout_marginLeft="@dimen/horiz_margin"
        android:layout_marginRight="@dimen/horiz_margin"
        android:text="@string/add_to_cart_btn_text"
        android:drawableLeft="@drawable/add_to_cart_btn" />

</LinearLayout>