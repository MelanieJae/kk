<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/product_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_screen_iv_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/cust_notes_label"
        app:layout_constraintTop_toBottomOf="@+id/product_variety_spinner"
        tools:layout_editor_absoluteX="143dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="32sp"
        tools:layout_editor_absoluteX="376dp" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_vert_margin"
        android:layout_marginTop="@dimen/list_vert_margin"
        android:layout_gravity="end"
        android:textSize="32sp" />

    <android.widget.Spinner
        android:id="@+id/product_variety_spinner"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/product_iv"
        tools:layout_editor_absoluteX="151dp" />

    <TextView
        android:id="@+id/qty_label"
        style="@style/ProductTextStyleCartDark"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/qty_label"
        android:onClick="showKeyboard"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="199dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/qty_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/colorPrimaryDark"
        android:focusable="false" />

    <TextView
        android:id="@+id/cust_notes_label"
        style="@style/ProductTextStyleCartDark"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/cust_notes_label"
        app:layout_constraintBottom_toTopOf="@+id/product_iv"
        app:layout_constraintTop_toBottomOf="@+id/product_iv"
        tools:layout_editor_absoluteX="168dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/cust_requests_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:focusable="false" />

</LinearLayout>
